@model Category

<div class="container p-6">
    <form method="post" asp-controller="Category" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="border p-3 my-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" disabled class="text-warning"></span>
        </div>
        <div class="mb-3">
            <input asp-for="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>